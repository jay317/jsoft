function getClientInfo(){
	$id=$_REQUEST['term']; 
	$res=$this->ClientModel->getClientById($id);
	if($res){
		$result=json_encode($res);
		echo $result;
	}
	
}

function clientDetail(){
	//$id=$this->uri->segment(3); 
